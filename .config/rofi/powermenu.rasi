* {
    bg: rgba(0, 0, 0, 0.3);
    fg: #fff;
    accent: #fff;
    selected: rgba(0, 0, 0, 0.3);
    urgent: #f38ba8;
    border-color-light: #fff;
    
    background-color: transparent;
    text-color: @fg;
    font: "JetBrainsMono Nerd Font 12";
}

window {
    transparency: "real";
    background-color: @bg;
    border: 1px;
    border-radius: 12px;
    width: 75px; /*con texto 300px*/
    padding: 6px; /* con texto 20*/
    location: east;
    anchor: east;
    x-offset: -50px;
    y-offset: 0;
}

mainbox {
    children: [ /*inputbar,*/ listview];
    spacing: 20px;
}

