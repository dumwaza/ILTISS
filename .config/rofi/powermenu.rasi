listview {
    lines: 5;
    spacing: 10px;
    scrollbar: false;
}

element {
    padding: 15px;
    border-radius: 8px;
    text-color: @fg;
    orientation: vertical;
    border-color: @border-color-light;
}

element selected {
    background-color: @selected;
    border: 1px;
    border-color: @border-color-light;
    text-color: @accent;
}

element-text {
    vertical-align: 0.5;
}

element-icon {
    size: 0px; /* 24px version con texto*/
    padding: 0 10px 0 0;
    horizontal-align: 0.5;
}
